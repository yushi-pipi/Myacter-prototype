<li id="micropost-<%= micropost.id %>">
    <span class="activity"><%= link_to micropost.activity.title, micropost.activity %></span>
    <dt class="id"><%= micropost.id %></dt>
    <dt class="memo"><%= micropost.memo %></dt>
    <dt class="start_at"><%= micropost.start_at.strftime('%-H:%M:%S')%>~<%= micropost.finish_at.strftime('%-H:%M:%S') %></dt>
    <dt class="int_at"><%= "#{micropost.act_itvl.strftime('%-Hh%-Mm%-Ss')}" %></dt>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </li>