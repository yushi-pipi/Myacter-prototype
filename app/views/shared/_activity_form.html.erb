<%= form_for(@activity) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title, class: 'form-control', placeholder: "Compose new activitytitle..." %>
  </div>
  <div class="form-group">
    <%= f.select :category, ['学習', 'プログラミング', '読書', 'スポーツ', '音楽', '芸術'], {include_blank: 'カテゴリ選択'}, class: 'sample' %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>

<script type="text/javascript">
  $('#activity_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 3) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>