<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if current_user.topimage? %>
      <%= image_tag current_user.topimage.url, class:"profile_img" ,size: 100%>
      <% elsif current_user.tuimage? %>
      <%= image_tag current_user.tuimage, class:"profile_img" ,size: 100%>
      <% else %>
      <%= link_to gravatar_for(current_user, size: 50), current_user %>
      <% end %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.activities.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>